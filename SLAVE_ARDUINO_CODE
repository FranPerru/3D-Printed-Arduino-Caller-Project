//SLAVE ARDUINO CODE//
char inByte='0';
void setup() {
  pinMode(13, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(11, OUTPUT);
  pinMode(10, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(2, OUTPUT);
  pinMode(A1, OUTPUT);
  pinMode(A2, OUTPUT);
  
  
  // Iniciar comunicaci√≥n serial
  Serial.begin(9600);
  

}




void loop()
{
  if (Serial.available()) 
  {
   inByte = Serial.read();
    
    if (inByte == '1')
    {
     digitalWrite(4,1);
     digitalWrite(A1,1);
     digitalWrite(2,0);
     digitalWrite(3,0);
     digitalWrite(5,0);
     digitalWrite(6,0);
     digitalWrite(7,0);
     digitalWrite(8,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(12,0);
     digitalWrite(13,0);
     digitalWrite(A2,0);
    }
    else if (inByte == '2')
    {
     digitalWrite(2,1);
     digitalWrite(3,1);
     digitalWrite(5,1);
     digitalWrite(6,1);
     digitalWrite(A1,1);
     digitalWrite(4,0);
     digitalWrite(7,0);
     digitalWrite(8,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(12,0);
     digitalWrite(13,0);
     digitalWrite(A2,0);
    }
    else if (inByte == '3')
    {
     digitalWrite(2,1);
     digitalWrite(3,1);
     digitalWrite(4,1);
     digitalWrite(6,1);
     digitalWrite(A1,1);
     digitalWrite(5,0);
     digitalWrite(7,0);
     digitalWrite(8,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(12,0);
     digitalWrite(13,0);
     digitalWrite(A2,0);
    }
    else if (inByte == '4')
    {
     digitalWrite(2,1);
     digitalWrite(4,1);
     digitalWrite(A1,1);
     digitalWrite(A2,1);
     digitalWrite(3,0);
     digitalWrite(5,0);
     digitalWrite(6,0);
     digitalWrite(7,0);
     digitalWrite(8,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(12,0);
     digitalWrite(13,0);
    }
    else if (inByte == '5')
    {
     digitalWrite(2,1);
     digitalWrite(3,1);
     digitalWrite(4,1);
     digitalWrite(6,1);
     digitalWrite(A2,1);
     digitalWrite(5,0);
     digitalWrite(7,0);
     digitalWrite(8,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(12,0);
     digitalWrite(13,0);
     digitalWrite(A1,0);
    }
    else if (inByte == '6')
    {
     digitalWrite(2,1);
     digitalWrite(3,1);
     digitalWrite(4,1);
     digitalWrite(5,1);
     digitalWrite(6,1);
     digitalWrite(A2,1);
     digitalWrite(7,0);
     digitalWrite(8,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(12,0);
     digitalWrite(13,0);
     digitalWrite(A1,0);
    }
    else if (inByte == '7')
    {
     digitalWrite(3,1);
     digitalWrite(4,1);
     digitalWrite(A1,1);
     digitalWrite(2,0);
     digitalWrite(5,0);
     digitalWrite(6,0);
     digitalWrite(7,0);
     digitalWrite(8,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(12,0);
     digitalWrite(13,0);
     digitalWrite(A2,0);
    }
    else if (inByte == '8')
    {
     digitalWrite(2,1);
     digitalWrite(3,1);
     digitalWrite(4,1);
     digitalWrite(5,1);
     digitalWrite(6,1);
     digitalWrite(A1,1);
     digitalWrite(A2,1);
     digitalWrite(7,0);
     digitalWrite(8,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(12,0);
     digitalWrite(13,0);
    }
    else if (inByte == '9')
    {
     digitalWrite(2,1);
     digitalWrite(3,1);
     digitalWrite(4,1);
     digitalWrite(6,1);
     digitalWrite(A1,1);
     digitalWrite(A2,1);
     digitalWrite(5,0);
     digitalWrite(7,0);
     digitalWrite(8,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(12,0);
     digitalWrite(13,0);
    }
    else if (inByte == 'a')
    {
     digitalWrite(3,1);
     digitalWrite(4,1);
     digitalWrite(5,1);
     digitalWrite(6,1);
     digitalWrite(A1,1);
     digitalWrite(A2,1);
     digitalWrite(8,1);
     digitalWrite(12,1);
     digitalWrite(2,0);
     digitalWrite(7,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(13,0);
    }
    else if (inByte == 'b')
    {
     digitalWrite(3,0);
     digitalWrite(4,1);
     digitalWrite(5,0);
     digitalWrite(6,0);
     digitalWrite(A1,1);
     digitalWrite(A2,0);
     digitalWrite(8,1);
     digitalWrite(12,1);
     digitalWrite(2,0);
     digitalWrite(7,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(13,0);
    }
    else if (inByte == 'c')
    {
     digitalWrite(3,1);
     digitalWrite(4,0);
     digitalWrite(5,1);
     digitalWrite(6,1);
     digitalWrite(A1,1);
     digitalWrite(A2,0);
     digitalWrite(8,1);
     digitalWrite(12,1);
     digitalWrite(2,1);
     digitalWrite(7,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(13,0);
    }
    else if (inByte == 'd')
    {
     digitalWrite(3,1);
     digitalWrite(4,1);
     digitalWrite(5,0);
     digitalWrite(6,1);
     digitalWrite(A1,1);
     digitalWrite(A2,0);
     digitalWrite(8,1);
     digitalWrite(12,1);
     digitalWrite(2,1);
     digitalWrite(7,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(13,0);
    }
    else if (inByte == 'e')
    {
     digitalWrite(3,0);
     digitalWrite(4,1);
     digitalWrite(5,0);
     digitalWrite(6,0);
     digitalWrite(A1,1);
     digitalWrite(A2,1);
     digitalWrite(8,1);
     digitalWrite(12,1);
     digitalWrite(2,1);
     digitalWrite(7,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(13,0);
    }
    else if (inByte == 'f')
    {
     digitalWrite(3,1);
     digitalWrite(4,1);
     digitalWrite(5,0);
     digitalWrite(6,1);
     digitalWrite(A1,0);
     digitalWrite(A2,1);
     digitalWrite(8,1);
     digitalWrite(12,1);
     digitalWrite(2,1);
     digitalWrite(7,0);
     digitalWrite(9,0);
     digitalWrite(10,0);
     digitalWrite(11,0);
     digitalWrite(13,0);
    }
  }
}
